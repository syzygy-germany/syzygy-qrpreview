root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[**.js]
indent_style = space
indent_size = 4

[**.sass]
indent_style = space
indent_size = 4

[**.xml]
indent_style = space
indent_size = 4

[**.css]
indent_style = space
indent_size = 4

[**.php]
indent_style = space
indent_size = 4

[**.html]
indent_style = space
indent_size = 4

[**.ts,**.typoscript]
indent_style = space
indent_size = 4

[**.txt]
indent_style = space
indent_size = 4

[**.rst]
indent_style = space
indent_size = 3
